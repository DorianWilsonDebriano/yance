<div class="page container mb-5">
  <h2 class="page-title">Your classes</h2>

  <!-- tabs -->
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <% if current_user.trainers.present? %>
      <li class="nav-item">
        <a class="nav-link profile-tab active" id="created-tab" data-toggle="tab" href="#created" role="tab" aria-controls="created" aria-selected="false">Created</a>
      </li>
    <% end %>
    <% if current_user.trainers.empty? %>
      <li class="nav-item">
        <a class="nav-link profile-tab active" id="upcoming-tab" data-toggle="tab" href="#upcoming" role="tab" aria-controls="upcoming" aria-selected="true">Booked</a>
      </li>
    <% else %>
      <li class="nav-item">
        <a class="nav-link profile-tab" id="upcoming-tab" data-toggle="tab" href="#upcoming" role="tab" aria-controls="upcoming" aria-selected="true">Booked</a>
      </li>
    <% end %>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="created" role="tabpanel" aria-labelledby="created-tab">
      <!-- created classes section -->
      <% if current_user.trainers.present? %>
        <div class="profile-created-classes-section d-flex justify-content-center flex-column">
          <h2>Your upcoming created classes</h2>
          <% if @user_sports_classes != nil %>
            <div class="profile-created-classes ">
              <%= render collection: @user_sports_classes, partial: "shared/profile-created-classes", as: :user_sports_classes %>
            </div>
          <% end %>
        </div>
        <%= link_to "Create a class", new_trainer_sports_class_path(current_user.trainers.ids), class: "btn browse-button mt-5" %>
      <% end %>
    </div>
    <% if current_user.trainers.empty? %>
      <div class="tab-pane show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
    <% else %>
      <div class="tab-pane fade" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
    <% end %>
      <div class="upcoming-classes-section d-flex justify-content-center flex-column">
        <!-- booked classes section -->
        <% if current_user.class_bookings.present? %>
          <h2>Your bookings</h2>
          <div class="profile-upcoming-classes">
            <%= render collection: @user_bookings, partial: "shared/profile-upcoming-classes", as: :user_booking  %>
          </div>
        <% else %>
          <h2>Your bookings</h2>
          <div class="profile-upcoming-classes">
            <p>Nothings booked yet! Go book your first class!</p>
          </div>
        <% end %>
      </div>
      <%= link_to "Explore yance", sports_classes_path, class: "btn browse-button mt-5" %>
    </div>
  </div>
</div>
