          <%= link_to sports_classes_path(query:[:cardio]), class: "explore-category" do %>
            <p>cardio  <i class="fas fa-angle-right"></i></p>
          <% end %>
        </div>
        <div class="sport-category-block">
          <%= link_to sports_classes_path(query:[:stretching]) do %>
            <%= cl_image_tag "https://res.cloudinary.com/dorianwilsondebriano/image/upload/v1609254082/IMG_6126_edubet.jpg", class: "sport-category-image" %>
          <% end %>
          <%= link_to sports_classes_path(query:[:stretching]), class: "explore-category" do %>
            <p>stretching  <i class="fas fa-angle-right"></i></p>
          <% end %>
        </div>
      </div>
      <div class="d-flex pt-3 justify-content-center">
        <%= link_to "Sign up now", new_user_registration_path, class: "sign-up-button", id: "section-button"%>
        <%= link_to "Visit platform", sports_classes_path, class: "visit-platform-button", id: "section-visit-button" %>
      </div>
    </div>
  </div>
</div>
