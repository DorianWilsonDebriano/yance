          <% end %>
          <%= link_to sports_classes_path(query:[:yoga]), class: "explore-category" do %>
            <p>yoga  <i class="fas fa-angle-right"></i></p>
          <% end %>
        </div>
        <div class="sport-category-block">
          <%= link_to sports_classes_path(query:[:abs]) do %>
            <%= cl_image_tag "https://res.cloudinary.com/dorianwilsondebriano/image/upload/v1611747683/OH5C5934_copy-min_a2rz6l.jpg", class: "sport-category-image" %>
          <% end %>
          <%= link_to sports_classes_path(query:[:abs]), class: "explore-category" do %>
            <p>abs  <i class="fas fa-angle-right"></i></p>
          <% end %>
        </div>
        <div class="sport-category-block">
          <%= link_to sports_classes_path(query:[:cardio]) do %>
            <%= cl_image_tag "https://res.cloudinary.com/dorianwilsondebriano/image/upload/v1611747694/OH5C6445-min_dawhgy.jpg", class: "sport-category-image" %>
