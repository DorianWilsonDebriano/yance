        <%= link_to "explore all classes", sports_classes_path, class: "check-it-out draw meet", id: "explore-center" %>
      </div>
    </div>
    <div class="punchliner-right col-sm-12 col-md-12 col-lg-8 py-3 pl-5">
      <div class="sport-category-grid">
        <div class="sport-category-block">
          <%= link_to sports_classes_path(query:[:yoga]) do %>
