<div class="main-messages-container">
  <div class="sports-class-message-container" id="sports_class_message-<%= sports_class_message.id %>">
    <i class="author">
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "user-chatroom-avatar" %>
      <% end %>
      <span><%= sports_class_message.user.first_name %></span>
      <span><%= sports_class_message.user.last_name %></span>
      <small><%= local_time(sports_class_message.created_at.strftime("%a %b %e at %l:%M%p")) %></small>
    </i>
    <p><%= sports_class_message.content %></p>
  </div>
</div>
