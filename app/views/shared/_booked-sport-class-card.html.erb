<% if classbooking.sports_class.date_time > (Time.now - 1.hour) %>
  <div class="booked-sports-classes-card d-flex">
    <% if classbooking.sports_class.photo.attached? %>
      <div>
        <%= cl_image_tag classbooking.sports_class.photo.key, class: "booked-class-card-image" %>
      </div>
    <% end %>
      <div class="booked-class-card-header">
      <p class="booked-class-card-datetime"><%= l(classbooking.sports_class.date_time, format: :day) %> <%= l(classbooking.sports_class.date_time, format: :month_day) %><%= local_time(l(classbooking.sports_class.date_time), format: :at_time) %></p>
      <p class="booked-class-card-title"><%= classbooking.sports_class.title %></p>
      <p class="booked-class-card-duration"><i class="far fa-clock pr-1"></i><%= t('.duration', duration: classbooking.sports_class.duration) %> </p>
      <p class="booked-class-card-category"> <%= t('.category_trainer_html', category: classbooking.sports_class.category, trainer_firstname: classbooking.sports_class.user.first_name, trainer_lastname: classbooking.sports_class.user.last_name) %></p>
    </div>
    <div class="booked-class-info-buttons">
      <button class="btn go-to-class-icon"><%= link_to sports_class_path(classbooking.sports_class), method: "GET" do %>
          <i class="fas fa-video" data-container="body" data-toggle="popover" data-placement="top" data-trigger="hover" data-content=" <%= t('.live_stream_modal') %> "></i>
        <% end %>
      </button>
      <%= link_to class_booking_path(classbooking), method: :delete, data: {confirm: "Are you sure?"}, class: "btn profile-cancel-booking-icon", id:"sweet-alert-delete" do %>
        <i class="fas fa-window-close"></i>
        <p id="cancel-class"><%= t('.cancel') %></p>
      <% end %>
   </div>
  </div>
<% end %>
