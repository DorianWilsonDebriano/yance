<div class="booked-sports-classes-card d-flex">
    <% if classbooking.sports_class.photo.attached? %>
      <div>
        <%= cl_image_tag classbooking.sports_class.photo.key, class: "booked-class-card-image" %>
      </div>
    <% end %>
    <div class="booked-class-card-header">
      <p class="booked-class-card-datetime"><%= classbooking.sports_class.date_time.strftime("%A %b %d %Y %H:%M") %></p>
      <p class="booked-class-card-title"><%= classbooking.sports_class.title %></p>
      <p class="booked-class-card-duration"><%= classbooking.sports_class.duration %></p>
      <p class="booked-class-card-category"><strong><%= classbooking.sports_class.category %></strong> with <strong><%= classbooking.sports_class.trainer.user.first_name %> <%= classbooking.sports_class.trainer.user.last_name %></strong> </p>
    </div>
    <div class="booked-class-info-buttons">
      <button class="btn go-to-class-icon"><%= link_to sports_class_path(classbooking.sports_class), method: "GET" do %>
          <i class="fas fa-video"></i>
        <% end %>
      </button>
      <button class="btn profile-cancel-booking-icon"> <%= link_to class_booking_path(classbooking), method: :delete, data: { confirm: "Are you sure?" }, class: "profile-cancel-button" do %>
          <i class="fas fa-window-close"></i>
          <p id="cancel-class">cancel</p>
        <% end %>
      </button>
    </div>

  </div>
  <button class="btn profile-cancel-button profile-cancel-booking" id="sweet-alert-delete"> CANCEL BOOKING </button>
  <%= link_to "", class_booking_path(classbooking), method: :delete, class: "hidden", id:'delete-link' %>

